{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2020.string",
      "es2019.array",
      "es2015.promise",
      "ES2017"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}
